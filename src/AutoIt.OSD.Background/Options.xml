<?xml version="1.0" encoding="utf-8" ?>

<Options>

  <!-- Title of the tools window -->
  <Title>OSD Tools Menu</Title>

  <!-- Password to allow access to the tools window, leave blank for none -->
  <Password><![CDATA[Pass]]></Password>

  <!-- Uses a screen size form that copies the user wallaper. Keeps it in front of Setup is preparing your computer for first use -->
  <CustomBackgroundEnabled>true</CustomBackgroundEnabled>

  <!-- Show progress bar for current task sequence progress. Requires CustomBackgroundEnabled to be true also. -->
  <ProgressBarEnabled>true</ProgressBarEnabled>

  <!-- The color of the progress bar in HTML/RGB format: #RRGGBB -->
  <ProgressBarForeColor>#5D83AC</ProgressBarForeColor>
  <ProgressBarBackColor>#FFFFFF</ProgressBarBackColor>

  <!-- Location of the progress bar. Top or Bottom -->
  <ProgressBarDock>Bottom</ProgressBarDock>
  
  <!-- Offset in pixels from the Top or Bottom of the screen -->
  <ProgressBarOffset>0</ProgressBarOffset>
  
  <!-- Height of the progress bar -->
  <ProgressBarHeight>16</ProgressBarHeight>

  <!-- List of tools -->
  <!-- Can use environment variables in CommandLine, Arguments and WorkingDirectory -->
  <!-- %OSDBackgroundDir% represents the directory AutoIt.OSD.Background.exe is launched from -->
  <UserTools>
    
    <!-- Set to true to enable the user tools tab -->
    <UserToolsEnabled>true</UserToolsEnabled>

    <UserToolList>

      <UserTool>
        <Name>Command Prompt</Name>
        <Program>cmd.exe</Program>
        <Arguments></Arguments>
        <WorkingDirectory>%OSDBackgoundExeDir%</WorkingDirectory>
      </UserTool>

      <UserTool>
        <Name>Registry Editor</Name>
        <Program>regedit.exe</Program>
        <Arguments></Arguments>
        <WorkingDirectory></WorkingDirectory>
      </UserTool>
    
      <UserTool>
        <Name>Task Manager</Name>
        <Program>taskmgr.exe</Program>
        <Arguments></Arguments>
        <WorkingDirectory></WorkingDirectory>
      </UserTool>

    </UserToolList>

  </UserTools>

</Options>
